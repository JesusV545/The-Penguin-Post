{{#if posts.length}}
<section class="mt-8">
  <h2 class="text-lg font-bold mb-4">Your Posts</h2>
  <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    {{#each posts as |post|}}
      {{> dashboard-posts post}}
    {{/each}}
  </div>
</section>
{{/if}}

<div class="flex justify-end mt-8">
  <a href="/dashboard/new" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition-colors duration-200">+ New Post</a>
</div>

<script src="../public/js/add-post.js"></script>
